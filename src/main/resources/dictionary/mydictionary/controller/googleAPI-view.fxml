<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="APIPane" prefHeight="600.0" prefWidth="820.0" stylesheets="@../stylesheets/api.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.mydictionary.controller.APIController">
    <children>
        <VBox fx:id="APIContent1" layoutX="10.0" layoutY="14.0" prefHeight="250.0" prefWidth="800.0">
            <children>
                <HBox fx:id="APIHbox1" prefHeight="30.0" prefWidth="800.0">
                    <children>
                        <Button fx:id="langFromEng" mnemonicParsing="false" onAction="#eng1" prefHeight="30.0" prefWidth="100.0" styleClass="button-lang" text="English" />
                        <Button fx:id="langFromVie" mnemonicParsing="false" onAction="#vie1" prefHeight="30.0" prefWidth="100.0" styleClass="button-lang" text="Tiếng Việt" />
                        <Button mnemonicParsing="false" onAction="#speak1" prefHeight="30.0" prefWidth="50.0" styleClass="button-speaker" />
                    </children>
                </HBox>
                <TextArea fx:id="srcText" prefHeight="220.0" prefWidth="800.0" />
            </children>
        </VBox>
        <VBox fx:id="APIContent2" layoutX="10.0" layoutY="336.0" prefHeight="250.0" prefWidth="800.0">
            <children>
                <HBox fx:id="APIHbox2" prefHeight="30.0" prefWidth="800.0">
                    <children>
                        <Button fx:id="langToVie" mnemonicParsing="false" onAction="#vie2" prefHeight="30.0" prefWidth="100.0" styleClass="button-lang" text="Tiếng Việt" />
                        <Button fx:id="langToEng" mnemonicParsing="false" onAction="#eng2" prefHeight="30.0" prefWidth="100.0" style="-fx-border-width: 1;" styleClass="button-lang" text="English" />
                        <Button mnemonicParsing="false" onAction="#speak2" prefHeight="30.0" prefWidth="50.0" styleClass="button-speaker" />
                    </children>
                </HBox>
                <TextArea fx:id="destText" prefHeight="220.0" prefWidth="800.0" />
            </children>
        </VBox>
        <HBox fx:id="APIHbox3" alignment="CENTER" layoutX="313.0" layoutY="270.0" prefHeight="60.0" prefWidth="85.0">
            <children>
                <Button fx:id="translateBtn" mnemonicParsing="false" onAction="#translate" prefHeight="31.0" prefWidth="51.0" styleClass="button-trans" textAlignment="CENTER" />
            </children>
        </HBox>
        <HBox fx:id="APIHbox4" alignment="CENTER" layoutX="75.0" layoutY="270.0" prefHeight="60.0" prefWidth="220.0">
            <children>
                <TextField fx:id="text1" prefHeight="30.0" prefWidth="200.0" />
            </children>
        </HBox>
        <HBox fx:id="APIHbox5" alignment="CENTER" layoutX="419.0" layoutY="270.0" prefHeight="60.0" prefWidth="220.0">
            <children>
                <TextField fx:id="text2" prefHeight="30.0" prefWidth="200.0" />
            </children>
        </HBox>
    </children>
</AnchorPane>
